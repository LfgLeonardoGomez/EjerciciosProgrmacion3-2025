
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="miPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Clases mapeadas -->
        <class>main.java.org.example.Medico</class>
        <class>main.java.org.example.Paciente</class>
        <class>main.java.org.example.Medicamento</class>
        <class>main.java.org.example.Consulta</class>
        <class>main.java.org.example.HistoriaClinica</class>
        
        <properties>
            <!-- ConexiÃ³n PostgreSQL -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/miDB"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="08042013"/>
            
            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>


 
